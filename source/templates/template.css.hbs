 * Copyright Star Tribune
 */

@font-face {
  font-family: "{{options.fontName}}";
  src: {{{src}}};
}

{{options.templateOptions.baseSelector}} {
  line-height: 1;
}

{{options.templateOptions.baseSelector}}:before {
  font-family: {{options.fontName}} !important;
  font-style: normal;
  font-weight: normal !important;
  vertical-align: top;
}

{{#each codepoints}}
.{{../options.templateOptions.classPrefix}}{{@key}}:before {
  content: "\\{{this}}";
}

{{/each}}
/* SVG includes */
{{options.templateOptions.baseSelector}}-svg {
  display: inline-block;
  width: 1em;
  height: 1em;
}
