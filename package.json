{
  "name": "@striblab/strib-icons",
  "description": "Icons used in projects as different formats.",
  "version": "1.0",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.1.1"
  },
  "hugo-bin": {
    "buildTags": "extended",
    "version": "0.134.3"
  },
  "scripts": {
    "start": "npm run docs:serve",
    "docs:serve": "hugo server --port 4000 --disableFastRender",
    "docs:build": "hugo --cleanDestinationDir --printUnusedTemplates --environment local",
    "docs:build-prod": "hugo --cleanDestinationDir --printUnusedTemplates",
    "pages": "node build/build-pages.mjs",
    "icons": "npm-run-all icons:main --aggregate-output --parallel icons:sprite icons:font",
    "icons:main": "node build/build-svgs.mjs",
    "icons:zip": "cross-env-shell \"rm -rf strib-icons-$npm_package_version strib-icons-$npm_package_version.zip && cp -r icons/ strib-icons-$npm_package_version && cp strib-icons.svg strib-icons-$npm_package_version && cp -r font/ strib-icons-$npm_package_version && zip -qr9 strib-icons-$npm_package_version.zip strib-icons-$npm_package_version && rm -rf strib-icons-$npm_package_version\"",
    "icons:sprite": "svg-sprite --config svg-sprite.json --log=info \"icons/*.svg\"",
    "icons:font": "npm-run-all icons:font-*",
    "icons:font-main": "fantasticon",
    "icons:font-min": "cleancss -O1 --format breakWith=lf --with-rebase --output font/strib-icons.min.css font/strib-icons.css",
    "version:increment": "node build/bump-version.mjs",
    "release:build": "npm-run-all icons docs:build-prod",
    "release:zip": "npm-run-all icons docs:build-prod icons:zip",
    "test:fusv": "fusv docs/assets/scss/",
    "test:eslint": "eslint --cache --cache-location .cache/.eslintcache .",
    "test:stylelint": "stylelint docs/assets/scss/ --cache --cache-location .cache/.stylelintcache",
    "test:lockfile-lint": "lockfile-lint --allowed-hosts npm --allowed-schemes https: --empty-hostname false --type npm --path package-lock.json",
    "test:check-icons": "node build/check-icons.mjs",
    "test": "npm-run-all --parallel --aggregate-output --continue-on-error test:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@twbs/fantasticon": "^3.0.0",
    "autoprefixer": "^10.4.20",
    "bootstrap": "^5.3.3",
    "clean-css-cli": "^5.6.3",
    "clipboard": "^2.0.11",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.1",
    "find-unused-sass-variables": "^6.0.0",
    "fuse.js": "^7.0.0",
    "globals": "^14.0.0",
    "hugo-bin": "^0.133.5",
    "lockfile-lint": "^4.14.0",
    "npm-run-all2": "^7.0.1",
    "picocolors": "^1.1.1",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "stylelint": "^16.10.0",
    "stylelint-config-twbs-bootstrap": "^15.1.0",
    "svg-sprite": "^3.0.0-rc2",
    "svgo": "^3.3.2",
    "vnu-jar": "24.10.17"
  }
}
